<% if logged_in? -%>
  <div id="user-bar-greeting">
    Logged in as <%= link_to_current_user :content_method => :login %>
  </div>
  <div id="user-bar-action"  >
    (<%= link_to "Log out", logout_path, { :title => "Log out" }    %>)
  </div>
<% else -%>
  <div id="user-bar-action"  >
    <%= link_to "Log in",  login_path,  { :title => "Log in" } %> <!-- / -->
  </div>
<% end -%>
<table>
  <thead>
    <tr>
      <th>Name</th><th>Email</th><th>Edit</th><th>Destroy</th>
    </tr>
  </thead>
  <tbody>
    <%- for user in @users -%>
      <tr>
        <td><%=h user.name %></td>
        <td><%=h user.email %></td>
        <td><%= link_to("Memberships", user_membership_path(user.id)) %></td>
        <td><%= link_to("Edit", edit_user_path(user.id)) %></td>
        <td><%= link_to("Destroy", user_path(user.id), 
                        :method => :delete, 
                        :confirm => "Are you sure?") %></td>
      </tr>
    <%- end -%>    
  </tbody>
</table>
